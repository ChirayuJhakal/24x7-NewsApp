<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <title>24x7 Admin</title>
  </head>
  <body>
    <main>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand fs-2">24x7 Admin</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a
                  class="nav-link active fs-4"
                  aria-current="page"
                  href="/addnews"
                  >NewsForm</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link fs-4" href="/newslist">EditNews</a>
              </li>
              <li class="nav-item">
                <a class="nav-link fs-4" href="/logout">
                  <button class="btn btn-danger">Logout</button>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <div class="container m-5 align-items-center">
        <p class="h1">Add News</p>

        <form action="/add" method="post">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
              type="title"
              class="form-control"
              id="title"
              aria-describedby="titleHelp"
              name="Title"
              required
            />
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input
              name="Description"
              type="description"
              class="form-control"
              id="description"
              aria-describedby="descHelp"
              required
            />
          </div>
          <div class="mb-3">
            <label for="url" class="form-label">URL</label>
            <input
              name="url"
              type="url"
              class="form-control"
              id="url"
              aria-describedby="urlHelp"
              required
            />
          </div>
          <div class="mb-3">
            <label for="imgUrl" class="form-label">Image URL</label>
            <input
              name="urlToImage"
              type="imgUrl"
              class="form-control"
              id="imgUrl"
              aria-describedby="imgUrlHelp"
              required
            />
          </div>
          <div class="mb-3">
            <label for="publishedAt" class="form-label">Published At</label>
            <input
              name="published"
              type="publishedAt"
              class="form-control"
              id="publishedAt"
              aria-describedby="publishedAtHelp"
            />
          </div>
          <div id="sports" class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="false"
              id="sportsCheckbox"
              name="sports"
            />
            <label class="form-check-label" for="sports">
              Is it Sports News?
            </label>
          </div>

          <button type="submit" class="btn btn-info mt-4">Add News</button>
        </form>
      </div>
      <script>
        const sportsCheckbox = document.getElementById("sportsCheckbox");

        sportsCheckbox.addEventListener("change", function () {
          this.value = this.checked;
        });
      </script>
    </main>
  </body>
</html>
